<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddMenu">

    <include  layout="@layout/toolbar_main"/>

    <ImageView
        android:id="@+id/img1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/grey"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        />


    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/img1"
        android:layout_alignTop="@id/img1"
        android:layout_alignRight="@id/img1"
        android:layout_alignBottom="@id/img1"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textSize="18sp"
        android:hint="메뉴 사진을 등록하세요."
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="메뉴 이름을 등록하세요"
        android:background="@null"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/img1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="가격을 등록하세요"
        android:background="@null"
        android:inputType="number"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv1"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_UploadMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="메뉴 등록"
        android:textSize="15sp"
        app:backgroundTint="#000000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tv2"
        android:layout_centerInParent="true"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/white"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bottom_navigation_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>